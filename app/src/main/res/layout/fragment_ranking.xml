<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:screenOrientation="portrait"
        tools:context=".WordLists">

        <TextView
            android:id="@+id/userIdTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Ranking"
            android:textColor="@color/blue_500"
            android:textSize="26sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_alignTop="@id/userIdTxt"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/userIdTxt"
            android:src="@drawable/ic_cup" />

        <Spinner
            android:id="@+id/rankingPeriodSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userIdTxt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/blue_500"
            android:textSize="24sp"
            android:textStyle="normal" />

        <TableLayout
            android:id="@+id/rankingTable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rankingPeriodSpinner"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:stretchColumns="0,1,2"
            android:textAlignment="center" />

    </RelativeLayout>

</ScrollView>

