<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="registerBtnClick"
        android:text="@string/rejestracja"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listy słów"
        android:id="@+id/wordListsBtn"
        android:layout_below="@+id/registerBtn"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:onClick="moveToWordLists"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="wpisz id uzytkownika"
        android:layout_below="@+id/wordListsBtn"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/userIdTxt"
        />





</RelativeLayout>