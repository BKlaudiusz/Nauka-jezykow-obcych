<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradient_light"
    tools:context=".Register">


    <TextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Rejestracja"
        android:textColor="@color/black"
        android:textSize="30sp"
        />

    <EditText
        android:id="@+id/loginFieldReg"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Login"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textColorHint="@color/black"
        />

    <EditText
        android:id="@+id/passwordFieldReg"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginFieldReg"
        android:layout_centerHorizontal='true'
        android:layout_marginTop="20dp"
        android:hint="Hasło"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:textColorHint="@color/black"
        />

    <EditText
        android:id="@+id/passwordConfirmField"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordFieldReg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Potwierdź hasło"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:textColorHint="@color/black"
        />

    <CheckBox
        android:id="@+id/cookiesConfirm"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordConfirmField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Zgadzam się na prztwarzanie moich danych osobowych i lubię ciasteczka" />

    <Button
        android:id="@+id/registerConfirmBtn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cookiesConfirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Potwierdź"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        />
</RelativeLayout>