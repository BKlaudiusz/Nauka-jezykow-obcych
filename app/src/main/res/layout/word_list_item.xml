<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <Button
        android:id="@+id/listNameBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Nazwa listy"
        android:textAllCaps="false"
        android:textSize="16dp" />

    <RatingBar
        android:id="@+id/difficultyRB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/listNameBtn"
        android:clickable="false"
        android:isIndicator="true"
        android:numStars="3"
        android:rating="2"
        android:scaleX=".9"
        android:scaleY=".9"
        android:theme="@style/RatingBar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="-5dp"
        android:layout_below="@+id/listNameBtn"
        android:text="Utworzone przez: Adam"
        android:id="@+id/ownerTxt"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ownerTxt"
        android:max="100"
        android:progress="20" />

    <TextView
        android:id="@+id/progressTxt"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ownerTxt"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/progressBar"
        android:text="1/20" />

</RelativeLayout>