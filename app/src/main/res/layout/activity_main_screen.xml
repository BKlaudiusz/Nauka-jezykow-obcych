<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_screen"
    android:background="@drawable/english_background"

    >

    <Button
        android:id="@+id/main_screen_register"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:textAllCaps="false"
        android:backgroundTint="#2D175B"
        android:textSize="20sp"
        android:elevation="20dp"
        android:onClick="register"
        android:text="Rejestracja"
        />

    <Button
        android:id="@+id/main_screen_login"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/main_screen_register"
        android:backgroundTint="#2D175B"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:onClick="login"
        android:text="Zaloguj"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PomiÅ„"
        android:textSize="20sp"
        android:textAllCaps="false"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:textColor="@color/white"
        android:layout_marginStart="280dp"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>